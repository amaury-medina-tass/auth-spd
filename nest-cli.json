{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/auth-api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/auth-api/tsconfig.app.json",
    "assets": [
      "**/*.html"
    ]
  },
  "monorepo": true,
  "root": ".",
  "projects": {
    "auth-api": {
      "type": "application",
      "root": "apps/auth-api",
      "entryFile": "main",
      "sourceRoot": "apps/auth-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-api/tsconfig.app.json",
        "assets": [
          {
            "include": "../../../libs/common/src/email/templates/**/*",
            "outDir": "templates"
          }
        ]
      }
    },
    "auth-worker": {
      "type": "application",
      "root": "apps/auth-worker",
      "entryFile": "main",
      "sourceRoot": "apps/auth-worker/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-worker/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}